<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/background_color"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/background_color">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Economii"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>

        <com.github.mikephil.charting.charts.PieChart
            android:layout_gravity="center_horizontal"
            android:id="@+id/pieChart_savings"
            android:layout_marginTop="80dp"
            android:layout_width="290dp"
            android:layout_height="290dp"
            android:backgroundTint="@color/background_color">

        </com.github.mikephil.charting.charts.PieChart>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="400dp"
        app:contentPadding="12dp"
        app:cardBackgroundColor="#5A5A93"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Țintă"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/tinta_economii"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_gravity="">
            </EditText>
        </LinearLayout>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="70dp">
                <TextView
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Economii"
                    android:textSize="16dp"
                    android:textStyle="bold"/>
                <EditText
                    android:id="@+id/economii_curente"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:textSize="16dp"
                    android:gravity="center">
                </EditText>
            </LinearLayout>

            <Button
                android:id="@+id/salvare_economii"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:text="Salvare"
                android:textAlignment="center"
                android:textColor="@color/background_color"
                android:backgroundTint="#AAABB8" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</LinearLayout>