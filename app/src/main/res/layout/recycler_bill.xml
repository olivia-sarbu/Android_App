<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="10dp"
    android:layout_margin="4dp"
    android:background="?selectableItemBackground"
    android:backgroundTint="#5A5A93"
    app:cardCornerRadius="10dp">
    <View
        android:id="@+id/delete_record"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:layout_marginTop="40dp"
        android:background="@drawable/baseline_delete_24"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentLeft="true">
            <TextView
                android:id="@+id/categorie_factura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Factura"
                android:textStyle="bold"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/termen_limita"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Termen limitÄƒ"
                android:textSize="16sp"/>
        </LinearLayout>
        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/baseline_upcoming_24"/>
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/suma_plata_factura"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="0.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:text=" RON"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>